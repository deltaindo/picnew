FROM node:18-alpine

WORKDIR /app

# Install OpenSSL 1.1 and other dependencies required by Prisma
RUN apk add --no-cache openssl1.1-compat libc6-compat

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm install

# Copy source code
COPY . .

EXPOSE 5000

# Use dev mode for hot reload
CMD ["npm", "run", "dev"]
