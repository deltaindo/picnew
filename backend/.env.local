# Database Configuration
# Note: Use 'postgres' as hostname when running in Docker
DATABASE_URL="postgresql://postgres:postgres@postgres:5432/pic_app"

# Alternative individual database variables
DB_HOST=postgres
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=pic_app

# Node Environment
NODE_ENV=development

# Server Configuration
PORT=5000

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRY=24h

# API Configuration
API_URL=http://localhost:5000/api

# Optional: Logging
LOG_LEVEL=debug
